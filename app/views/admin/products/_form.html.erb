<%= form_with(model: @product, multipart: true, url: @product.new_record? ? admin_products_path : admin_product_path(@product), html: { class: 'product-form' }) do |form| %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.textarea :description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :price, class: "form-label" %>
    <%= form.text_field :price, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :stock, class: "form-label" %>
    <%= form.number_field :stock, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :color, class: "form-label" %>
    <%= form.text_field :color, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :size, class: "form-label" %>
    <%= form.text_field :size, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id, class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Selecciona una categoría" }, class: "form-select" %>
  </div>

  <div class="form-group">
    <%= form.label :entry_date, class: "form-label" %>
    <%= form.datetime_field :entry_date, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :deleted_at, class: "form-label" %>
    <%= form.datetime_field :deleted_at, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :images, "Imágenes (máximo 3)", class: "form-label" %>
    <div class="multiple-file-inputs">
      <%= form.file_field :images, 
                        accept: 'image/*',
                        class: "form-input mb-2",
                        name: "product[images][]" %>
      <%= form.file_field :images, 
                        accept: 'image/*',
                        class: "form-input mb-2",
                        name: "product[images][]" %>
      <%= form.file_field :images, 
                        accept: 'image/*',
                        class: "form-input",
                        name: "product[images][]" %>
    </div>
  </div>

  <div class="form-submit">
    <%= form.submit "Guardar", class: "submit-btn" %>
  </div>
<% end %>

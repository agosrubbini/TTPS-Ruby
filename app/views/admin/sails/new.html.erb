<%= render 'layouts/navbar' %>
<h1>Registrar nueva venta</h1>

<h2>Carrito de productos</h2>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Color</th>
      <th>Tamaño</th>
      <th>Cantidad</th>
    </tr>
  </thead>
  <tbody>
    <% @selected_products.each do |product_id, amount| %>
      <% product = Product.find(product_id) %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.color %></td>
        <td><%= product.size %></td>
        <td><%= amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Agregar productos a la venta</h2>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Color</th>
      <th>Tamaño</th>
      <th>Stock</th>
      <th>Cantidad</th>
      <th>Acción</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.color %></td>
        <td><%= product.size %></td>
        <td><%= product.stock %></td>
        <td>
          <%= form_with url: add_product_admin_sails_path, method: :post, local: true do |form| %>
            <%= form.hidden_field :product_id, value: product.id %>
            <%= form.number_field :amount, min: 1, max: product.stock %>
            <%= form.submit "Agregar" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form_with(model: @sail, url: admin_sails_path, method: :post, local: true) do |form| %>
  <%= form.label :user_id, "Empleado" %>
  <%= form.collection_select :user_id, User.where.not("name LIKE '*%'"), :id, :name, prompt: "Seleccione el empleado" %>


  <%= form.label :client_dni, "DNI del Cliente" %>
  <%= form.text_field :client_dni %>

  <%= form.label :completed_at, "Fecha de la venta" %>
  <%= form.datetime_local_field :completed_at, value: Time.current.in_time_zone("America/Argentina/Buenos_Aires").strftime("%Y-%m-%dT%H:%M") %>

  <%= form.submit "Registrar Venta" %>
<% end %>

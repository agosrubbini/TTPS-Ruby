<%= render 'layouts/navbar' %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Mi Perfil</h2>
        </div>
        <div class="card-body">
          <div class="user-detail">
            <p>
              <strong class="detail-label">Nombre:</strong>
              <%= @user.name %>
            </p>

            <p>
              <strong class="detail-label">Email:</strong>
              <%= @user.email %>
            </p>

            <p>
              <strong class="detail-label">Tel√©fono:</strong>
              <%= @user.phone %>
            </p>

            <p>
              <strong class="detail-label">Rol:</strong>
              <%= @user.roles.any? ? @user.roles.first.name : 'No role assigned' %>
            </p>
          </div>

          <div class="mt-4">
            <%= link_to 'Editar mi perfil', profile_edit_admin_users_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>